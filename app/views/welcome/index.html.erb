<div class="container">
  <div class="jumbotron">
    <%= form_for ShortUrl.new, url: ({controller: "welcome", action: "shorten_url"}) do |f| %>
      <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
          <h4 class="center" >Short your link </h4>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
          <div class="input-group">
            <div class="input-group-btn">
              <%= f.text_field :url ,placeholder: "type your link here", class: "form-control" %>
              <%= f.submit "OK", class: "btn btn-success" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
   <% if @short_urls %>
     <% @short_urls.each do |url|%>
      <div class="row">
        <div class="col-lg-4">
          <%= link_to url.short_url, controller: "welcome", action: "index", id: url.short_url %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
